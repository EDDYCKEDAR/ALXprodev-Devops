#!/bin/bash
# Extract Pikachu's name, height, weight, and type from data.json

if [ ! -f data.json ]; then
    echo "data.json not found. Run the first script."
    exit 1
fi

NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')
HEIGHT=$(jq -r '.height' data.json | awk '{print $1/10}') # decimetres to metres
WEIGHT=$(jq -r '.weight' data.json | awk '{print $1/10}') # hectograms to kg
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
