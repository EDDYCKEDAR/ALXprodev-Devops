#!/bin/bash
# Extract Pikachu's name, height, weight, and type from data.json
# Output must match: "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

if [ ! -f data.json ]; then
    echo "data.json not found. Run the first script."
    exit 1
fi

name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
formatted_height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}') # decimetres → metres
formatted_weight=$(jq -r '.weight' data.json | awk '{printf "%.1f", $1/10}') # hectograms → kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
