#!/bin/bash
# Fetch Pikachu data from PokeAPI and save to data.json
# Logs errors to errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the request
if ! curl -s -f "$API_URL" -o "$OUTPUT_FILE"; then
    echo "[$(date)] Failed to fetch Pikachu data from API" >> "$ERROR_FILE"
    exit 1
fi
