#!/bin/bash
# Create CSV report from multiple PokÃ©mon JSON files

OUT_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

if [ ! -d "$OUT_DIR" ]; then
    echo "pokemon_data directory not found."
    exit 1
fi

echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

for FILE in "$OUT_DIR"/*.json; do
    NAME=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')
    HEIGHT=$(jq -r '.height' "$FILE" | awk '{print $1/10}')
    WEIGHT=$(jq -r '.weight' "$FILE" | awk '{print $1/10}')
    echo "$NAME,$HEIGHT,$WEIGHT" >> "$REPORT_FILE"
done

# Calculate averages
AVG_HEIGHT=$(awk -F',' 'NR>1 {sum+=$2} END {print sum/(NR-1)}' "$REPORT_FILE")
AVG_WEIGHT=$(awk -F',' 'NR>1 {sum+=$3} END {print sum/(NR-1)}' "$REPORT_FILE")

echo "CSV Report generated at: $REPORT_FILE"
echo ""
cat "$REPORT_FILE"
echo ""
echo "Average Height: ${AVG_HEIGHT} m"
echo "Average Weight: ${AVG_WEIGHT} kg"
